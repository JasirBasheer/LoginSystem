<%- include("header")-%>


<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-2">
            <h2 class="font-weight-bold">Welcome Back</h2>
            <span></span>
            <% if (locals.logout) { %>
                <div class="alert alert-success text-center" style="height: 11px;display: flex;align-items: center;justify-content: center; font-size: 11px;"  >
                    <%= logout %>
                </div>
            <% } else { %>
                <div class="alert  text-center " style="height: 11px;display: flex;align-items: center;justify-content: center; font-size: 11px;">
                    Login with your current account
                </div>
            <% } %>
            
        </div>
        <form action="/login" method="post">
            <div class="form-group">
                <input type="email" placeholder="Email" name="email" id="email " class="form-control">
                <div class="errormsgemail" ></div>
            </div>
            <div class="form-group">
                <input type="password" placeholder="password" name="password" id="password " class="form-control">
                <div class="errormsgpassword"></div>
            </div>
            <% if (typeof error !== 'undefined') { %>
                <div style="color:red;"><%= error %></div>
              <% } %>
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
</div>




<%- include("footer")-%>